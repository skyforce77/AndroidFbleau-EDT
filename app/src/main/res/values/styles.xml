<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/AppTabStyle</item>
    </style>

    <style name="AppActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#3b8ead</item>
    </style>

    <style name="AppTabStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:popupBackground">#3b8ead</item>
    </style>

</resources>
